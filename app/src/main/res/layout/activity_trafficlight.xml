<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/traf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_trafficlight"
    android:orientation="vertical"
    tools:context="com.example.user.codedriver.trafficlight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/trafficlight" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:background="@android:color/transparent"
            android:onClick="subClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:background="@android:color/transparent"
            android:onClick="subClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/submit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="350dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ans1"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="85dp"
                android:scaleType="fitXY"
                android:src="@drawable/question" />

            <ImageView
                android:id="@+id/ans2"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/question"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ans3"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="37dp"
                android:scaleType="fitXY"
                android:src="@drawable/question"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ans4"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/question"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="330dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnred"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:onClick="btnClick"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btnred" />

            <ImageButton
                android:id="@+id/btngreen"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:onClick="btnClick"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btngreen" />

            <ImageButton
                android:id="@+id/go_trafficlight"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:onClick="btnClick"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/go_trafficlight" />

            <ImageButton
                android:id="@+id/stop"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:onClick="btnClick"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/stop" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>